def convert(s, numRows):
    if numRows == 1 or numRows >= len(s):
        return s
    zigzag = [''] * numRows
    row, step = 0, 1
    for char in s:
        zigzag[row] += char
        if row == 0:
            step = 1
        elif row == numRows - 1:
            step = -1
        row += step
    return ''.join(zigzag)
s1 = "PAYPALISHIRING"
numRows1 = 3
print(convert(s1, numRows1))  # Output: "PAHNAPLSIIGYIR"
